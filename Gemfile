source 'https://rubygems.org'

gem 'rails', '3.2.3'
gem 'will_paginate'
gem 'devise'

# Gems used in development environment
group :development do
	gem 'sqlite3'
	gem "rspec-rails", "~> 2.0"
	gem 'annotate', '~> 2.4.1.beta'
	gem "nifty-generators"
end

# Gems used in test environment
group :test do
	gem "rspec-rails", "~> 2.0"
	gem 'webrat'
	gem 'factory_girl_rails'
end

# Gems used in production environment
group :production do
	gem 'thin'
	gem 'pg', '0.12.2'
end

# Gems used only for assets
group :assets do
	gem 'sass-rails',   '~> 3.2.3'
	gem 'coffee-rails', '~> 3.2.1'
	gem 'twitter-bootstrap-rails'
	gem 'sprockets', '~> 2.0'
	gem 'uglifier', '>= 1.0.3'
end
