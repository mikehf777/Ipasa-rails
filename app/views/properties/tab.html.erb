
<ul class="nav nav-tabs">
  <li class="active"><%= link_to "Lista", properties_path(:format => :js) , :remote => true , 'data-toggle' => 'tab' %></li>
  <li><%= link_to "Nueva  Propiedad", {:controller => "properties", :action => "new" , :format => :js}, :remote => true , 'data-toggle' => 'tab'%></li>
</ul>
 <div id="content" class="tab-pane active"> 
 	<%- model_class = Property.new.class -%>  
  <div class="page-header">
  <h1>Listado de Propiedades</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:num_ext) %></th>
      <th><%= model_class.human_attribute_name(:direccion) %></th>
      <th><%= model_class.human_attribute_name(:ofertada) %></th>
      <th>Localidad</th>
      <th>Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%=  link_to property.nombre, property_path(property) %></td>
        <td><%= property.num_ext %></td>
        <td><%= property.direccion %></td>
        <td><% if property.ofertada == true %>
          <i class="icon-ok"></i>
          <% else %>
          <i class="icon-remove"></i>
          <% end %>
        </td>
        <td><%= property.locality.nombre %></td>
        <td>
          <%= link_to 'Editar', edit_property_path(property), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', property_path(property), :method => :delete,:confirm => 'Â¿Estas Seguro?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

 </div>
 