<!DOCTYPE html>
<html>
	<head>
	  <title><%= title(yield(:title))%></title>
	  <%= csrf_meta_tags %>
	  <%= render "layouts/stylesheets"%>
	</head>
	<body>
		<div class="container-fluid">
			<%= render 'layouts/header'%>
			<div class="row-fluid">
		  	<div class="span2">
		  		<%= render 'layouts/lateralmenu'%>
		  	</div>
		  	<div class="span10">
		  		<%= render  "layouts/fancy" %>	
					<section>
						<%= render 'layouts/alerts' %>
						<h2><%= yield(:title) %></h2>
						<%= yield %>
					</section>
				</div>
			</div>
			<footer>
				<%= render 'layouts/footer'%>
				<%= debug(params) if Rails.env.development? %>
			</footer>
		</div>
	</body>
</html>
