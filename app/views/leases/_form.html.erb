<%= form_for @lease, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :num_int, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :num_int, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status_renta, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :status_renta, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :precio, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :precio, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :descripcion, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :profile_id, :class => 'control-label' %>
    <div class="controls">
      <%= select("lease", "profile_id", Profile.all.collect {|l| [ l.nombre, l.id ] }, {:prompt => 'Selecione una Propiedad'}) %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                leases_path, :class => 'btn' %>
  </div>
<% end %>
